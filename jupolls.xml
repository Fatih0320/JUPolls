<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>COM_JUPOLLS</name>
    <author>Denys Nosov</author>
    <creationDate>15.05.2017</creationDate>
    <authorEmail>denys@joomla-ua.org</authorEmail>
    <authorUrl>http://joomla-ua.org</authorUrl>
    <copyright>Copyright (C) 2016-2017 Joomla! Ukraine</copyright>
    <license>GNU/GPL, http://www.gnu.org/licenses/gpl-2.0.html</license>
    <version>2.0.0</version>
    <description>JUPolls is a simple and flexible component for voting.</description>

    <files folder="site">
        <filename>jupolls.php</filename>
        <filename>index.html</filename>
        <filename>router.php</filename>
        <folder>models</folder>
        <folder>views</folder>
    </files>

    <languages folder="languages/site">
        <language tag="en-GB">en-GB.com_jupolls.ini</language>
        <language tag="uk-UA">uk-UA.com_jupolls.ini</language>
        <language tag="ru-RU">ru-RU.com_jupolls.ini</language>
        <language tag="ru-RU">ru-RU.mod_jupolls.ini</language>
    </languages>

    <media folder="media" destination="jupolls">
        <folder>js</folder>
        <folder>images</folder>
    </media>

    <administration>
        <menu link="option=com_jupolls">COM_JUPOLLS</menu>
        <submenu>
            <menu link="option=com_jupolls&amp;controller=polls">COM_JUPOLLS_POLLS</menu>
            <menu link="option=com_jupolls&amp;controller=votes">COM_JUPOLLS_VOTES</menu>
        </submenu>

        <files folder="admin">
            <filename>config.xml</filename>
            <filename>index.html</filename>
            <filename>toolbar.php</filename>
            <filename>jupolls.php</filename>
            <folder>assets</folder>
            <folder>elements</folder>
            <folder>models</folder>
            <folder>mvc</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>

        <languages folder="languages/admin">
            <language tag="en-GB">en-GB.com_jupolls.ini</language>
            <language tag="en-GB">en-GB.com_jupolls.sys.ini</language>
        </languages>

    </administration>

    <scriptfile>script.php</scriptfile>

    <update>http://joomla-ua.org/update/com/jupolls.xml</update>
    <updateservers>
        <server type="extension" priority="1" name="JUPolls">http://joomla-ua.org/update/com/jupolls.xml</server>
    </updateservers>

</extension>